  transform: scale(0.5);
  transform-origin: top left;
  position: absolute;
  top: 150px;
  left: 45px;
  border-radius: 10px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  background: rgb(192, 69, 69);
  /* Make sure the canvas element reserves layout space in case transform affects interaction */
  /* If you need responsiveness, consider wrapping canvas in a container and scaling that container */
}

